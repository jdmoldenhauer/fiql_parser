# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Docstrings and comments use max_line_length = 79
[*.py]
indent_size = 4
max_line_length = 119

[setup.cfg]
indent_size = 4

# Makefilses always use tabs for indentation
[Makefile]
indent_style = tab
